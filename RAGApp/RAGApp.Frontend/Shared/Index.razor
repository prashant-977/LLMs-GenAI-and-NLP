@page "/"
@inject ApiService ApiService

<h3>Upload Files and Get Insights</h3>
<InputFile OnChange="HandleFileUpload" multiple />
<Select @bind-Value="selectedProfession">
    <option value="Doctor">Doctor</option>
    <option value="Engineer">Engineer</option>
    <!-- Add more professions here -->
</Select>

<InputText @bind-Value="queryText" placeholder="Enter your question..." />

<button @onclick="GetInsights">Get Insights</button>

@code {
    private string selectedProfession;
    private string queryText;
    private string insights;

    private async Task HandleFileUpload(InputFileChangeEventArgs e)
    {
        // Handle PDF/CSV upload to backend
    }

    private async Task GetInsights()
    {
        insights = await ApiService.GetInsightsAsync(selectedProfession, queryText, 0.9f);
    }
}
